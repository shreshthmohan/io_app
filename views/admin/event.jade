extends admin_layout

block content
  h1 #{race.event_name}
  form(action="#{race.event_name}", method="post")
  //- TODO place text before if (data label/ field name)
    if(race.event_url)
      a(href=race.event_url id="event_url" class="data" target="_blank") Event URL 
      div(id="change_event_url" class="edit") edit
    else
      | No event URL; add one:
      input(type="text", name="event_url")
    br
    if(race.event_url_social)
      a(href=race.event_url_social id="event_url_social" class="data") Event Social link
      div(id="change_event_url_social" class="edit") edit
    else
      | No Social Event URL; add one:
      input(type="text", name="event_url_social")
    br
    if(race.organiser_name)
      div(id="organiser_name" class="data") #{race.organiser_name}
      div(id="change_organiser_name" class="edit") edit
    else
      | No organiser name; add:
      input(type="text", name="organiser_name")
    br
    if(race.organiser_url)
      a(href=race.organiser_url id="organiser_url" class="data" target="_blank") Event URL 
      div(id="change_organiser_url" class="edit") edit
    else
      | No Organiser URL; add one:
      input(type="text", name="organiser_url")
    br
    | Address: 
    if(race.address_field)
      div(id="address_field" class="data") #{race.address_field}
      div(id="change_address" class="edit") edit
    else
      | No Address; add:
      input(type="text", name="address_field")
    br
    if(race.location_url)
      a(href=race.location_url id="location_url" class="data") Location on map
      div(id="change_location_url" class="edit") edit
    else
      | No location URL; add:
      input(type="text", name="location_url")
    br
    | Start date 
    if(race.start_date)
      div(id="start_date" class="data") #{race.start_date}
      div(id="change_start_date" class="edit") edit
    else
      | No start date; add:
      input(type="text", name="start_date")
    br
    | End date 
    if(race.end_date)
      div(id="end_date" class="data") #{race.end_date}
      div(id="change_end_date" class="edit") edit
    else
      | No end date; add:
      input(type="text", name="end_date")
    br
    | phone 1: 
    //- TODO: add mobile-compatible phone numbers
    if (race.phone_primary)
      div(id="phone_primary" class="data") #{race.phone_primary}
      div(id="change_phone_primary" class="edit") edit
    else
      | none exists; add:
      input(type="text", name="phone_primary", id="phone_primary")
    br
    | phone 2: 
    if (race.phone_secondary)
      div(id="phone_secondary" class="data") #{race.phone_secondary}
      div(id="change_phone_secondary" class="edit") edit
    else
      | none exists; add:
      input(type="text", name="phone_secondary", id="phone_secondary")
    br
    | phone 3: 
    if (race.phone_tertiary)
      div(id="phone_tertiary" class="data") #{race.phone_tertiary}
      div(id="change_phone_tertiary" class="edit") edit
    else
      | none exists; add:
      input(type="text", name="phone_tertiary", id="phone_tertiary")
    br
    | Email: 
    if (race.email)
      div(id="email" class="data") #{race.email}
      div(id="change_email" class="edit") edit
    else
      | none exists; add:
      input(type="text", name="email", id="email")
    br
    | Comments: 
    if (race.comments)
      div(id="comments" class="data") #{race.comments}
      div(id="change_comments" class="edit") edit
    else
      | none exists; add:
      input(type="text", name="comments", id="comments")
    br
    ul
      each link in social_links
        li
          | #{link.link}
    | Add a social link: 
    input(type="text", name="social_link")
    br
    input(type="submit")
  ul Tags associated with this race:
    each ltag in linked_tags
      li
        | #{ltag.tag_name}
  form(action="#{race.event_name}/choose_tag", method="post")
    | Associate an activity tag with this race: 
    select(name="tag_id", id="tag_id")
      each tag in tags
        option(value=tag.id) #{tag.tag_name}
    input(type="submit")
    br
  form(action="#{race.event_name}/add_tag", method="post")
    | Add a new tag
    input(type="text", name="new_tag")
    input(type="submit")
  script(src='/jquery.min.js')
  script(src='/event.js')
