doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap.css')
    link(rel='stylesheet', href='/retailer.css')
    link(rel='stylesheet', href='/admin.css')
    link(rel='shortcut icon', href='/favicon.ico')
  body
    h1 #{retailer.retailer_name}
    form(action="#{retailer.retailer_name}", method="post")
      if (retailer.website_url)
        a(href=retailer.website_url id="website_url"  class="data" target="_blank") Website
        div(id="change_website_url" class="edit") edit
      else
        | No web URL; add one:
        input(type="text", name="website_url")
      br
      | Address: 
      br
      if (retailer.address_field)
        div(id="address_field" class="data") #{retailer.address_field}
        div(id="change_address" class="edit") edit
      else
        | none exist; add:
        input(type="text", name="address_field")
      br
      if (retailer.location_url)
        a(href=retailer.location_url id="location_url") Location on map
        div(id="change_location_url" class="edit") edit
      else
        | No location URL; add: 
        input(type="text", name="location_url")
      br
      | phone 1: 
      //- TODO: add mobile-compatible phone numbers
      if (retailer.phone_primary)
        div(id="phone_primary" class="data") #{retailer.phone_primary}
        div(id="change_phone_primary" class="edit") edit
      else
        | none exists; add:
        input(type="text", name="phone_primary", id="phone_primary")
      br
      | phone 2: 
      if (retailer.phone_secondary)
        div(id="phone_secondary" class="data") #{retailer.phone_secondary}
        div(id="change_phone_secondary" class="edit") edit
      else
        | none exists; add:
        input(type="text", name="phone_secondary", id="phone_secondary")
      br
      | phone 3: 
      if (retailer.phone_tertiary)
        div(id="phone_tertiary" class="data") #{retailer.phone_tertiary}
        div(id="change_phone_tertiary" class="edit") edit
      else
        | none exists; add:
        input(type="text", name="phone_tertiary", id="phone_tertiary")
      br
      | Email: 
      if (retailer.retailer_email)
        div(id="retailer_email" class="data") #{retailer.retailer_email}
        div(id="change_retailer_email" class="edit") edit
      else
        | none exists; add:
        input(type="text", name="retailer_email", id="retailer_email")
      br
      | Comments: 
      if (retailer.comments)
        div(id="comments" class="data") #{retailer.comments}
        div(id="change_comments" class="edit") edit
      else
        | none exists; add:
        input(type="text", name="comments", id="comments")
      br
      ul
        each link in social_links
          li
            | #{link.link}
            div(class="slink")
              a(href=retailer.retailer_name + "/slink/" +link.id) x
      | Add a social link: 
      input(type="text", name="social_link")
      br
      input(type="submit")
      br
    ul Brands they sell:
      each lbrand in linked_brands
        li
          | #{lbrand.brand_name}
    form(action="#{retailer.retailer_name}/choose_brand", method="post")
      | Associate a brand with this retailer: 
      select(name="brand_id", id="brand_id")
        each brand in brands
          option(value=brand.id) #{brand.brand_name}
      input(type="submit")
      br
    form(action="#{retailer.retailer_name}/add_brand", method="post")
      | Add a new brand
      input(type="text", name="new_brand")
      input(type="submit")
      br
    ul Tags associated with this retailer:
      each ltag in linked_tags
        li
          | #{ltag.tag_name}
    form(action="#{retailer.retailer_name}/choose_tag", method="post")
      | Associate an activity tag with this retailer: 
      select(name="tag_id", id="tag_id")
        each tag in tags
          option(value=tag.id) #{tag.tag_name}
      input(type="submit")
      br
    form(action="#{retailer.retailer_name}/add_tag", method="post")
      | Add a new tag
      input(type="text", name="new_tag")
      input(type="submit")
    script(src='/jquery.min.js')
    script(src='/retailer.js')
