      span(class="hide-for-small")  
  li(class="social-icon")
    a(href='TODO')
      i(class="fa fa-facebook")
      span(class="hide-for-small") 

block content
  include event_filter_bar
  .heading
    h1= title_
  .category-list
      - if(races)
          each race in races
            div.col-md-4
              .category-el.clearfix
                .info.clearfix(style="background-image: url(http://ashishlimaye.files.wordpress.com/2012/05/anpdgrjceaikw8v.jpg);")
                  .col-xs-8.info-text
                    a(href="/app/events/" + race.City.city_name + "/" + race.id)
                      h2.sm.bold #{race.event_name}
                    .city
                      span.fa.fa-map-marker.helper
                      | #{race.City.city_name}
                    span.fa.fa-calendar.date.helper
                    span.date_value
                      | #{race.dataValues.start_date_f}
                  .col-xs-4.img-pre.clearfix
                    //img(src="http://content.nike.com/content/dam/one-nike/en_us/season-2012-su/open-graph/onenike_homepage_v1_opengraph_100x100.jpg" alt=race.event_name height="100px")
                  .info-overlay
                .tags.clearfix
                  each tag in race.EventTags
                    li.tag
                      | #{tag.Tag.tag_name}
                  each subtag in race.EventSubtags
                    li.subtag
                      | #{subtag.Subtag.subtag_name}
      - if(event_tags)
          each event_tag in event_tags
            div.category-el.col-md-4
              .category-el.clearfix
                .info.clearfix(style="background-image: url(http://ashishlimaye.files.wordpress.com/2012/05/anpdgrjceaikw8v.jpg);")
                  .col-xs-8.info-text
                    a(href="/app/events/" + event_tag.Event.City.city_name + "/" + event_tag.Event.City.id + "/" + event_tag.Event.id)
                      h2.sm.bold #{event_tag.Event.event_name}
                    .city
                      | #{event_tag.Event.City.city_name}
                    span(class="fa fa-calendar date") 
                    span.date_value
                      | #{event_tag.Event.dataValues.start_date_f}
                  .col-xs-4.img-pre.clearfix
                    //img(src="http://content.nike.com/content/dam/one-nike/en_us/season-2012-su/open-graph/onenike_homepage_v1_opengraph_100x100.jpg" alt=race.event_name height="100px")
                  .info-overlay
                .tags.clearfix
                  li.tag
                    | #{tag.tag_name}
                  each subtag in event_tag.Event.EventSubtags
                    li.subtag
                      | #{subtag.Subtag.subtag_name}
