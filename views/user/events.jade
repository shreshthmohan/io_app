doctype html

html(lang='en')
  head
    title= title
    link(href="/css/application.css" rel="stylesheet")
  body
    div(class="navbar navbar-default navbar-fixed-top" role="navigation")
      div(class="container")
        div(class="navbar-header")
          button(type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse")
            span(class="sr-only") Toggle navigation
            span(class="icon-bar")
            span(class="icon-bar")
            span(class="icon-bar")
          a(class="navbar-brand" href="/") India Outside
        div(class="navbar-collapse collapse")
          ul(class="nav navbar-nav")
            li
              a(href='/') Home
            li(class="active")
              a(href='/events') Events
            li
              a(href='TODO') Gear 
            li(class="social-icon")
              a(href='TODO')
                i(class="fa fa-twitter")
                span(class="hide-for-small")  
            li(class="social-icon")
              a(href='TODO')
                i(class="fa fa-facebook")
                span(class="hide-for-small") 
    div(class="container")
      div(class="jumbotron")
        h1= h1_title
        div(class="filter-bar")
          h2 Races and Events!
          form(class="search")
            input(class="form-control" type="text" name="activitytype" placeholder="e.g. surfing")
            input(class="form-control" type="text" name="location" placeholder="e.g. Goa")
            .cal
              span(class="fa fa-calendar") 
              input(class="form-control" type="text" name="start_date" placeholder="e.g. 4 December 2014" id="from")
            .cal
              span(class="fa fa-calendar") 
              input(class="form-control" type="text" name="end_date" placeholder="e.g. 12 January 2015" id="to")
         .events-list
           ul
           each race in races
             li
               | #{race.event_name}
               br
               | #{race.start_date}
               br
               | #{race.end_date}
               br
               | #{race.CityId}
    script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
