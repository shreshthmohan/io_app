block content
  include event_filter_bar
  .heading
    h1= title_
  .events-list
    each race in races
      div.event-el
        each tag in race.EventTags
          li.tag
            | #{tag.Tag.tag_name}
        each subtag in race.EventSubtags
          li.subtag
            | #{subtag.Subtag.subtag_name}
        a(href="/app/events/" + race.City.city_name + "/" + race.City.id + "/" + race.id)
          h2 #{race.event_name}
        span.city
          | #{race.City.city_name}
        span(class="fa fa-calendar date") 
        span.date_value
          | #{race.dataValues.start_date_f}
