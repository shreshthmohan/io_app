extends ../layout

block content
  .row
    .entity.col-md-8.std-shadow.col-md-offset-2
      - if(school.website_url) 
          a(href=school.website_url target='_blank')
            h1.lg.inline #{school.school_name}
            span.fa.fa-external-link.margin-l-5.fs-16
      - else
          h1.lg #{school.school_name}
      span.location
        span.fa.fa-map-marker.w-20.fs-16.gray
        h2.md.inline #{school.City.city_name}
      - if(school.address_field)
          span.address.inline-block
            i.fa.fa-building.w-20.gray
            | #{school.address_field}
      - if(school.comments)
          span.description.inline-block
            i.fa.fa-bars.w-20.gray 
            | #{school.comments}
      - if(school.Emails != '')
          ul.emails
            each mail in school.Emails
              li.email
                span.fa.fa-envelope.w-20.gray
                a(href="mailto:" + mail.email)
                  | #{mail.email}
      - if(school.PhoneNumbers != '')
          ul.numbers
            each number in school.PhoneNumbers
              li.number
                span.fa.fa-phone-square.w-20.gray
                | #{number.number}
      .slinks.clearfix.margin-b-5
        each slink in school.SocialLinks
          li.social-link
            - if(slink.link.indexOf('facebook.com') > -1)
                a(href=slink.link target="_blank") 
                  span.fa.fa-facebook-official.color-fb
            - else if(slink.link.indexOf('twitter.com') > -1)
                a(href=slink.link target="_blank") 
                  span.fa.fa-twitter-square.color-tw
            - else if(slink.link.indexOf('plus.google.com') > -1)
                a(href=slink.link target="_blank")
                  span.fa.fa-google-plus-square.color-gp
            - else if(slink.link.indexOf('instagram.com') > -1)
                a(href=slink.link target="_blank")
                  span.fa.fa-instagram.color-in
            - else if(slink.link.indexOf('flickr.com') > -1)
                a(href=slink.link target="_blank")
                  span.fa.fa-flickr.color-flb
            - else if(slink.link.indexOf('youtube.com') > -1)
                a(href=slink.link target="_blank")
                  span.fa.fa-youtube.color-yt
            - else
                a(href=slink.link target="_blank")
                   span.fa.fa-external-link-square
      .tag-container.clearfix           
        each school_tag in school.SchoolTags
          li.tag
            span
              | #{school_tag.Tag.tag_name}
      - if(school.location_url)
        .map-embed.margin-t-10
          iframe(src=school.location_url width="100%" height="300" frameborder="0" style="border:0")
      - if(admin)
        .admin_link
          | Dear Admin, if you see something wrong or missing with this school you can modify it 
          a(href="/app/admin/schools/" + school.id, target="_blank") here
  hr.indi-hr
  .row
    .sub-heading.text-center Suggestions
    .col-md-4
      a(href="/app/schools/grouped?location=" + school.City.id , title="All outdoor schools in " + school.City.city_name)
        .category-el
          .info.clearfix(style="background-image: url(" + school.City.image_url + ");")
            .right
              i.fa.fa-building-o.helper-icon
            .info-text.margin-top-90.col-xs-12
              span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                | Learn in #{school.City.city_name}
            .info-overlay
    .col-md-4
      a(href="/app/schools/grouped" title="All Outdoor Schools by Activity")
        .category-el
          .info.clearfix
            .right
              i.fa.fa-building-o.helper-icon
            .info-text.margin-top-90.col-xs-12
              span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                | All Outdoor Schools by Activity
            .info-overlay
    .col-md-4
      a(href="/app/schools/grouped#by-location" title="All Outdoor Schools by Location")
        .category-el
          .info.clearfix
            .right
              i.fa.fa-building-o.helper-icon
            .info-text.margin-top-90.col-xs-12
              span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                | All Outdoor Schools by Location
            .info-overlay
    .col-md-4
      a(href="/app/gear/grouped?location=" + school.City.id , title="All outdoor gear stores and schools in " + school.City.city_name)
        .category-el
          .info.clearfix(style="background-image: url(" + school.City.image_url + ");")
            .right
              i.fa.fa-gear.helper-icon
            .info-text.margin-top-90.col-xs-12
              span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                | Stores in #{school.City.city_name}
            .info-overlay
    .col-md-4
      a(href="/app/events/upcoming/grouped?location=" + school.City.id , title="All outdoor events in " + school.City.city_name)
        .category-el
          .info.clearfix(style="background-image: url(" + school.City.image_url + ");")
            .right
              i.fa.fa-flag-checkered.helper-icon
            .info-text.margin-top-90.col-xs-12
              span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                | Events in #{school.City.city_name}
            .info-overlay

    .col-md-4
      a(href="/app/groups/grouped?location=" + school.City.id title="All Active Outdoor groups in " + school.City.city_name)
        .category-el
          .info.clearfix(style="background-image: url(" + school.City.image_url + ");")
            .right
              i.fa.fa-group.helper-icon
            .info-text.col-xs-12
              span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                | Groups in #{school.City.city_name}
            .info-overlay
