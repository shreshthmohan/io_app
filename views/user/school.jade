extends ../layout

block content
  include school_filter_bar
  .filter-margin
  .heading.text-center
    h1.md= title_
  .category-list.row
    - if((schools) && (schools != ''))
        each school in schools
          .col-md-4
            .category-el.b-l-4.clearfix
              .info-media.clearfix
                .info-box.col-xs-8
                  .info-box-sub
                    a(href="/app/schools/" + school.City.city_name + "/" + school.school_name_slug + "/" + school.id)
                      h2.sm #{school.school_name}
                    .city
                      span.fa.fa-map-marker.helper
                      | #{school.City.city_name}
                .img-pre.col-xs-4.clearfix
                  - if(school.img_url_square)
                      a(href="/app/schools/" + school.City.city_name + "/" + school.school_name_slug + "/" + school.id)
                        img.right.b-l-1(src=school.img_url_square alt=school.school_name height="100px")
                  - else
                      a(href="/app/schools/" + school.City.city_name + "/" + school.school_name_slug + "/" + school.id)
                        img.right.b-l-1(src="http://www.alluserpics.com/data/media/29/00857.jpg" alt=school.school_name height="100px")
              .tags.clearfix.border-top-gray
                each tag in school.SchoolTags
                  li.tag
                    | #{tag.Tag.tag_name}
    - else if((school_tags) && (school_tags != ''))
        each school_tag in school_tags
          .col-md-4
            .category-el.b-l-4.clearfix
              .info-media.clearfix
                .infobox.col-xs-8
                  .info-box-sub
                    a(href="/app/schools/" + school_tag.School.City.city_name + "/" + school_tag.School.school_name_slug + "/" + school_tag.School.id)
                      h2.sm #{school_tag.School.school_name}
                    .city
                      span.fa.fa-map-marker.helper
                      | #{school_tag.School.City.city_name}
                .img-pre.col-xs-4.clearfix
                  - if(school_tag.School.img_url_square)
                      a(href="/app/schools/" + school_tag.School.City.city_name + "/" + school_tag.School.school_name_slug + "/" + school_tag.School.id)
                        img.right.b-l-1(src=school_tag.School.img_url_square alt=school_tag.School.school_name height="100px")
                  - else
                      a(href="/app/schools/" + school_tag.School.City.city_name + "/" + school_tag.School.school_name_slug + "/" + school_tag.School.id)
                        img.right.b-l-1(src="http://www.alluserpics.com/data/media/29/00857.jpg" alt=school_tag.School.school_name height="100px")
              .tags.clearfix.border-top-gray
                li.tag
                  | #{tag.tag_name}
    - else
      .col-md-12
        p.alert.alert-warning.text-center.br-0.std-shadow.fs-16
            | Oops! We did not find anything. Sorry.
  .row
    .sub-heading.text-center Suggestions
    .suggestion-container
      //-.col-md-4
      //-  a(href="todo")
      //-    .category-el
      //-      .info.clearfix
      //-        .info-text.col-xs-12
      //-          span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
      //-            | Stores Online
      //-        .info-overlay
      - if((mode == "cho_tag_cho_loc") || (mode == "all_tag_cho_loc"))
        - if(mode == "cho_tag_cho_loc")
          .col-md-4
            a(href="/app/schools/grouped?activity=" + tag.id title="Places to learn " + tag.tag_name + " by location")
              .category-el
                .info.clearfix(style="background-image: url(" + tag.image_url + ");")
                  .right
                    i.fa.fa-building.helper-icon
                  .info-text.col-xs-12
                    span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                      | Learn #{tag.tag_name}
                  .info-overlay
        .col-md-4
          a(href="/app/schools/grouped?location=" + city.id title="Places to learn a sport in " + city.city_name + " by activity")
            .category-el
              .info.clearfix(style="background-image: url(" + city.image_url + ");")
                .right
                  i.fa.fa-building.helper-icon
                .info-text.col-xs-12
                  span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                    | Learn in #{city.city_name}
                .info-overlay
        .col-md-4
          a(href="/app/events/upcoming/grouped?location=" + city.id title="All Outdoor Events in " + city.city_name)
            .category-el
              .info.clearfix(style="background-image: url(" + city.image_url + ");")
                .right
                  i.fa.fa-flag-checkered.helper-icon
                .info-text.col-xs-12
                  span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                    | Events in #{city.city_name}
                .info-overlay
        .col-md-4
          a(href="/app/gear/grouped?location=" + city.id,  title="All Outdoor gear stores and retailers " + city.city_name)
            .category-el
              .info.clearfix(style="background-image: url(" + city.image_url + ");")
                .right
                  i.fa.fa-gear.helper-icon
                .info-text.col-xs-12
                  span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                    | Stores in #{city.city_name}
                .info-overlay
        .col-md-4
          a(href="/app/groups/grouped?location=" + city.id title="All Active Outdoor groups in " + city.city_name)
            .category-el
              .info.clearfix(style="background-image: url(" + city.image_url + ");")
                .right
                  i.fa.fa-group.helper-icon
                .info-text.col-xs-12
                  span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                    | Groups in #{city.city_name}
                .info-overlay
      - if((mode == "all_tag_all_loc") || (mode == "cho_tag_all_loc") || (mode == "all_tag_cho_loc"))
        .col-md-4
          a(href="/app/schools/grouped" title="All Outdoor Schools by Activity")
            .category-el
              .info.clearfix
                .right
                  i.fa.fa-building-o.helper-icon
                .info-text.col-xs-12
                  span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                    | Outdoor Schools by Activity
                .info-overlay
        .col-md-4
          a(href="/app/schools/grouped#by-location" title="All Outdoor Schools by Location")
            .category-el
              .info.clearfix
                .right
                  i.fa.fa-building-o.helper-icon
                .info-text.col-xs-12
                  span.number.padding-lr-5.uppercase.fs-12.bob.padding-tb-5
                    | Outdoor Schools by Location
                .info-overlay
